<%- include('../partials/header') %>
<link rel="stylesheet" href="/css/order-item.css"/>
<script defer type="text/javascript" src="/javascripts/add-minus.js"></script>

<div class="main">

    <div id="item">
        <div class="image-holder">
            <img src="<%= item[0].one %>" height="270" width="480">
        </div>

        <div class="item-name">
            <span><%= item[0].itemname %></span>
            <% if(item[0].foodtype=='veg'){ %>
                <img src="/images/veg-symbol.jpg" alt="veg" height="32" width="32"/>
            <% }else{ %>
                <img src="/images/nonveg.jpg" alt="veg" height="32" width="32"/>
            <% } %>
        </div>

        <div class="price-view"><%=item[0].price %>.00 Rs</div>

        <div class="desc">
            <span class="sdesc">Description:</span><br>
            <p class="desc-text"><%= item[0].description %></p>
            
        </div>
        <div class="btn-box">
            <button type="button" class="minus" onclick="minus()">
                -
            </button>
            <div id="number">
                <span id="num"><%= item[2] %></span>
            </div>
            <button type="button" class="plus" onclick="plus()">
                +
            </button>
        </div>
    </div>

    <div style="display:flex; justify-content: center;">
        <form method="POST" >
            <input type="hidden" name="qty" id="val">
            <button type="submit" name=submit value="Edit" class="sub" id="qty" onclick="eqty()" style="margin:0 100px 0 0;">Edit</button>
            <button type="submit" name=submit value="Remove" class="sub" style="margin:0 0 0 100px;">Remove</button>
        </form>
    </div>

    


            
</div>
<%- include('../partials/footer') %>